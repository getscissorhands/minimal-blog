{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Site": {
    "Title": "ScissorHands.NET - Minimal Blog",
    "Description": "A minimal blog using Tailwind CSS for ScissorHands.NET, inspired by [astro-minimal-blog](https://github.com/alexanderhodes/astro-minimal-blog).",
    "Locale": "en-US",
    "Author": "ScissorHands Team",
    "Theme": "minimal-blog",
    "BaseUrl": "/",
    "HeroImage": "/images/scissorhands-net.jpg",
    "UseLocaleInUrl": false,
    "UseDateInPostUrl": false,
    "Debug": false
  },

  "Plugins": [
    {
      "Name": "Google Analytics",
      "Options": {
        "MeasurementId": "G-XXXXXXXX"
      }
    },
    {
      "Name": "Open Graph",
      "Options": {
        "TwitterSiteId": "@getscissorhands"
      }
    }
  ]
}