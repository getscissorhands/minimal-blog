@inherits ScissorHands.Theme.PostViewBase
@layout MainLayout

<section class="post">
    @if (!string.IsNullOrWhiteSpace(Document.Metadata.HeroImage))
    {
        <div class="post hero-image">
            <img src="@Document.Metadata.HeroImage" alt="@Document.Metadata.Title" />
        </div>
    }
    <header class="post header">
        <p class="post meta">
            @if (Document.Metadata.Published is { } published)
            {
                <span>@published.ToString("MMMM dd, yyyy")</span>
            }
        </p>
        <h1 class="post title">@Document.Metadata.Title</h1>
        <TagList Tags="@Document.Metadata.Tags" CssClass="post tags" />
    </header>
    <article class="post body">
        @((MarkupString)Document.Html)
    </article>
</section>
