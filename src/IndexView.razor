@inherits ScissorHands.Theme.IndexViewBase
@layout MainLayout

<section class="home">
    <header class="home hero">
        <p class="home eyebrow">Welcome to</p>
        <h1 class="home title">@((MarkupString)Site!.Title)</h1>
        <p class="home subtitle">@((MarkupString)Site!.Description)</p>
    </header>
    <div class="home list">
        @foreach (var post in Documents)
        {
            <PostCard Post="@post" MaxDescriptionLength="150" />
        }
    </div>
</section>
